<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AexFilms.ViewModel.ViewModels.Listing;assembly=AexFilms.ViewModel"
             x:Class="AexFilms.View.Maui.Views.Listing.AdvancedSearchSelectionView"
             x:DataType="vm:IFilmDataListingVm" >
    
    <Border HeightRequest="55" WidthRequest="55"
            Margin="20,0,0,0" Padding="3"
            StrokeThickness="3" StrokeShape="RoundRectangle 30,30,30,0">
        <ImageButton Source="advanced_search.png" 
                     Command="{Binding AdvancedSearchSelectedCommand}">
        </ImageButton>
    </Border>
    
</ContentView>
